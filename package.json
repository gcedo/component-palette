{
  "name": "@economist/component-palette",
  "version": "1.0.0",
  "description": "Variables for each color in the color palette.",
  "author": "The Economist (http://economist.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/economist-palette/component-palette.git"
  },
  "homepage": "https://github.com/economist-palette/component-palette#readme",
  "bugs": {
    "url": "https://github.com/economist-palette/component-palette/issues"
  },
  "main": "index.js",
  "files": [
    "*.css"
  ],
  "eslintConfig": {
    "extends": "strict/react"
  },
  "component-devserver": {
    "example": "./example.es6",
    "css": [
      "/node_modules/mocha/mocha.css",
      "/index.css",
      "/example.css"
    ],
    "js": [
      "/node_modules/react/react.js?browserify&expose=react",
      {
        "contents": "window.React = require('react');"
      },
      "/index.es6?babelify&debug&expose=index.es6&external=react",
      "/example.es6?babelify&debug&expose=example.es6&external=react",
      {
        "contents": "require('react').render(require('example.es6'),document.getElementById('component-preview'));"
      }
    ],
    "html": []
  },
  "config": {
    "lint_opts": "--ignore-path .gitignore --ext .es6"
  },
  "scripts": {
    "lint": "eslint $npm_package_config_lint_opts .",
    "prepublish": "npm run build && babel . -d . -x .es6",
    "serve": "node_modules/@economist/component-devserver/component-devserver ."
  },
  "dependencies": {
    "eslint-config-strict-react": "^2.0.0",
    "react": "^0.13.3"
  },
  "devDependencies": {
    "@economist/component-devserver": "^2.0.0",
    "babel": "^5.5.8",
    "eslint": "^0.24.0",
    "eslint-config-strict": "^2.4.0",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-one-variable-per-var": "^0.0.3",
    "eslint-plugin-react": "^2.6.3",
    "minifyify": "^7.0.1",
    "mocha": "^2.2.5",
    "pre-commit": "^1.0.10"
  },
  "pre-commit": [
    "lint"
  ]
}
